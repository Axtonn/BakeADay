# Backend environment sample (no secrets)

# Database (required) â€” use the same URL for local and prod if you want a single DB
# Async driver for the app; Alembic will derive sync URL in env.py
DATABASE_URL=postgresql+asyncpg://<db_user>:<db_password>@<db_host>/<db_name>

# Admin auth (required)
ADMIN_EMAIL=admin@example.com
# Choose one of the following:
# ADMIN_PASSWORD is used directly for login
ADMIN_PASSWORD=change-me
# ADMIN_PASSWORD_HASH can be set instead of ADMIN_PASSWORD
# ADMIN_PASSWORD_HASH=<bcrypt-hash>

# App secret (required)
SECRET_KEY=set-a-secure-random-string

# Email / SMTP (required for contact/order notifications)
ADMIN_RECEIVER_EMAIL=orders@example.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=orders@example.com
SMTP_PASSWORD=use-app-password

# CORS (production + local dev)
CORS_ORIGINS=["https://bakeaday.vercel.app","http://localhost:3000"]
